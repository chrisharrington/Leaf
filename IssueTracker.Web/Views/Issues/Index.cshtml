<div class="tile table-tools">
	<div class="search">
		<input type="text" data-bind="value: search, valueUpdate: 'keyup'" placeholder="Search for keywords, tags, dates..."/>
		<i class="fa fa-times"></i>
	</div>
	<div class="tools">
		<i id="sort" class="fa fa-sort-alpha-asc"></i>
		<i class="fa fa-gear"></i>
	</div>
</div>

<div class="data-container">
	<div class="issues-container">
		<div class="loading tile" data-bind="visible: loading">
			<img src="@Url.Content("~/Images/ajax-loader.gif")" alt="" />
		</div>
		<div class="tile">
			<div class="data" data-bind="foreach: list">
				<a data-bind="attr: { 'data-issue': JSON.stringify($data), href: '#/' + IssueTracker.selectedProject().name.formatForUrl() + '/issues/' + name.formatForUrl() }">
					<div>
						<div data-bind="attr: { class: 'priority ' + priorityStyle }"></div>
						<div class="ellipsis name">
							<h2 class="name" data-bind="text: name"></h2>
							<span class="info">Last updated by <b data-bind="text: updatedBy"></b> at <b data-bind="text: lastUpdated"></b>.</span>
						</div>
						<div class="status" data-bind="text: status"></div>
					</div>
				</a>
			</div>
		</div>
	</div>
	<div class="filter-container">
		<div class="tile" id="priority-filter">
			<h2>Priority</h2>
			<!-- ko foreach: IssueTracker.priorities -->
				<div class="selected" data-bind="attr: { 'data-priority-id': id }">
					<span data-bind="text: name"></span>
					<i class="fa fa-check"></i>
				</div>
			<!-- /ko -->
		</div>
		<div class="tile" id="status-filter">
			<h2>Status</h2>
			<!-- ko foreach: IssueTracker.statuses -->
				<div class="selected" data-bind="attr: { 'data-status-id': id }">
					<span data-bind="text: name"></span>
					<i class="fa fa-check"></i>
				</div>
			<!-- /ko -->
		</div>
		<div class="tile" id="developer-filter">
			<h2>Developer</h2>
			<!-- ko foreach: IssueTracker.users -->
				<div class="selected" data-bind="attr: { 'data-developer-id': id }">
					<span data-bind="text: name"></span>
					<i class="fa fa-check"></i>
				</div>
			<!-- /ko -->
		</div>
		<div class="tile" id="tester-filter">
			<h2>Tester</h2>
			<!-- ko foreach: IssueTracker.users -->
				<div class="selected" data-bind="attr: { 'data-tester-id': id }">
					<span data-bind="text: name"></span>
					<i class="fa fa-check"></i>
				</div>
			<!-- /ko -->
		</div>
	</div>
</div>

<script id="priority-filter-dialog" type="text/html">
	<div class="selector dark select-popup priority-filter-dialog" data-bind="foreach: priorities">
		<div data-bind="attr: { 'data-priority': JSON.stringify($data), class: name.toLowerCase() + (IssueTracker.Issues.selectedPriority() && IssueTracker.Issues.selectedPriority().name == name ? ' selected' : '') }">
			<span data-bind="text: name"></span>
			<i class="fa fa-check"></i>
		</div>
	</div>
</script>

