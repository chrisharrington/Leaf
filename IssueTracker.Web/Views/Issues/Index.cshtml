<script id="text-filter-dialog" type="text/html">
	<div class="text-filter-dialog">
		<input type="text" data-bind="value: $root" />
		<div class="buttons">
			<button class="set-filter">Filter</button>
			<button class="clear-filter">Clear</button>
		</div>
	</div>
</script>

<script id="sort-dialog" type="text/html">
	<div class="sort-dialog">
		<div data-comparer="name">
			<span>Description</span>
			<i data-direction="descending" class="fa fa-angle-down" data-bind="css: { selected: direction() == 'descending' && comparer() == 'name' }"></i>
			<i data-direction="ascending" class="fa fa-angle-up" data-bind="css: { selected: direction() == 'ascending' && comparer() == 'name' }"></i>
		</div>
		<div data-comparer="priority">
			<span>Priority</span>
			<i data-direction="descending" class="fa fa-angle-down" data-bind="css: { selected: direction() == 'descending' && comparer() == 'priority' }"></i>
			<i data-direction="ascending" class="fa fa-angle-up" data-bind="css: { selected: direction() == 'ascending' && comparer() == 'priority' }"></i>
		</div>
		<div data-comparer="status">
			<span>Status</span>
			<i data-direction="descending" class="fa fa-angle-down" data-bind="css: { selected: direction() == 'descending' && comparer() == 'status' }"></i>
			<i data-direction="ascending" class="fa fa-angle-up" data-bind="css: { selected: direction() == 'ascending' && comparer() == 'status' }"></i>
		</div>
		<div data-comparer="tester">
			<span>Tester</span>
			<i data-direction="descending" class="fa fa-angle-down" data-bind="css: { selected: direction() == 'descending' && comparer() == 'tester' }"></i>
			<i data-direction="ascending" class="fa fa-angle-up" data-bind="css: { selected: direction() == 'ascending' && comparer() == 'tester' }"></i>
		</div>
		<div data-comparer="developer">
			<span>Developer</span>
			<i data-direction="descending" class="fa fa-angle-down" data-bind="css: { selected: direction() == 'descending' && comparer() == 'developer' }"></i>
			<i data-direction="ascending" class="fa fa-angle-up" data-bind="css: { selected: direction() == 'ascending' && comparer() == 'developer' }"></i>
		</div>
		<div data-comparer="opened">
			<span>Date Opened</span>
			<i data-direction="descending" class="fa fa-angle-down" data-bind="css: { selected: direction() == 'descending' && comparer() == 'opened' }"></i>
			<i data-direction="ascending" class="fa fa-angle-up" data-bind="css: { selected: direction() == 'ascending' && comparer() == 'opened' }"></i>
		</div>
		<div data-comparer="closed">
			<span>Date Closed</span>
			<i data-direction="descending" class="fa fa-angle-down" data-bind="css: { selected: direction() == 'descending' && comparer() == 'closed' }"></i>
			<i data-direction="ascending" class="fa fa-angle-up" data-bind="css: { selected: direction() == 'ascending' && comparer() == 'closed' }"></i>
		</div>
	</div>
</script>

<script id="add-new-filter-popup" type="text/html">
	<div class="add-new-filter-popup">
		
	</div>
</script>

<script id="saved-filter-dialog" type="text/html">
	<div class="saved-filter-dialog">
		<div class="tile">
			<div class="header">
				<h1>New Filter</h1>
				<div class="buttons">
					<button class="icon" id="save-filter">
						<i class="fa fa-check"></i>
						<span>Save</span>
					</button>
					<button class="icon" id="discard-filter">
						<i class="fa fa-times"></i>
						<span>Discard</span>
					</button>
				</div>
			</div>
			<div class="name">
				<input type="text" placeholder="Filter name..." />
			</div>
			<div class="choices">
				<div class="priority selector" data-bind="foreach: priorities">
					<div>
						<span data-bind="text: name"></span>
						<i class="fa fa-check"></i>
					</div>
				</div>
				<div class="status selector" data-bind="foreach: statuses">
					<div>
						<span data-bind="text: name"></span>
						<i class="fa fa-check"></i>
					</div>
				</div>
				<div class="developer selector" data-bind="foreach: users">
					<div>
						<span data-bind="text: name"></span>
						<i class="fa fa-check"></i>
					</div>
				</div>
				<div class="tester selector" data-bind="foreach: users">
					<div>
						<span data-bind="text: name"></span>
						<i class="fa fa-check"></i>
					</div>
				</div>
			</div>
		</div>
	</div>
</script>